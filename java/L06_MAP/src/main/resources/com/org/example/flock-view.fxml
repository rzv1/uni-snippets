<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.controlsfx.control.*?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.org.example.controller.FlockController">
    <VBox alignment="TOP_RIGHT" prefHeight="120.0" prefWidth="100.0">
        <children>
            <HBox alignment="TOP_CENTER" prefHeight="50.0" prefWidth="200.0" spacing="40.0">
                <children>
               <TextField fx:id="nameField" promptText="name" />
                    <ComboBox fx:id="typeComboBox" prefWidth="150.0" promptText="type" />
               <CheckComboBox fx:id="ducksComboBox" prefHeight="200.0" prefWidth="200.0" showCheckedCount="true" title="select ducks" />
                </children>
                <VBox.margin>
                    <Insets />
                </VBox.margin>
            </HBox>
              <Button mnemonicParsing="false" onAction="#onAddClick" prefHeight="30.0" prefWidth="62.0" text="Add" />
            <Button mnemonicParsing="false" onAction="#onRemoveClick" text="Remove" />
        </children>
    </VBox>
    <TableView fx:id="tableView" prefHeight="200.0" prefWidth="200.0">
        <columns>
            <TableColumn fx:id="idColumn" prefWidth="75.0" text="id" />
            <TableColumn fx:id="nameColumn" prefWidth="75.0" text="name" />
            <TableColumn fx:id="ducksColumn" prefWidth="309.0" text="ducks" />
        </columns>
    </TableView>
    <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="60.0">
        <VBox.margin>
            <Insets top="30.0" />
        </VBox.margin>
      <children>
         <Label fx:id="performanceLabel" text="Select a flock" />
      </children>
    </HBox>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
