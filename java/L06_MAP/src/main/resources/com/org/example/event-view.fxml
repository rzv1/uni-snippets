<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.org.example.controller.EventController">
    <VBox alignment="TOP_RIGHT" prefHeight="120.0" prefWidth="100.0">
        <children>
            <HBox alignment="TOP_CENTER" prefHeight="50.0" prefWidth="200.0" spacing="40.0">
                <children>
               <TextField fx:id="nameField" promptText="Event Name" />
                    <ComboBox fx:id="numberComboBox" prefWidth="150.0" promptText="number of ducks" />
                    <Button alignment="BOTTOM_CENTER" mnemonicParsing="false" onAction="#onAddClick" text="Add">
                        <HBox.margin>
                            <Insets />
                        </HBox.margin>
                    </Button>
                </children>
                <VBox.margin>
                    <Insets />
                </VBox.margin>
            </HBox>
            <Button mnemonicParsing="false" onAction="#onRemoveClick" text="Remove" />
        </children>
    </VBox>
    <TableView fx:id="tableView" prefHeight="200.0" prefWidth="200.0">
        <columns>
            <TableColumn fx:id="idColumn" prefWidth="75.0" text="id" />
            <TableColumn fx:id="nameColumn" prefWidth="75.0" text="name" />
            <TableColumn fx:id="idsColumn" prefWidth="309.0" text="ids" />
        </columns>
    </TableView>
    <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0" spacing="60.0">
        <children>
            <Button fx:id="prevPageBtn" mnemonicParsing="false" onAction="#onPrevPage" text="Prev" />
            <Label fx:id="pageLabel" text="Page x of y" />
            <Button fx:id="nextPageBtn" mnemonicParsing="false" onAction="#onNextPage" text="Next" />
        </children>
        <VBox.margin>
            <Insets top="30.0" />
        </VBox.margin>
    </HBox>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
